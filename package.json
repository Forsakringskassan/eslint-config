{
  "name": "@forsakringskassan/eslint-config-monorepo",
  "version": "10.1.0",
  "private": true,
  "description": "Försäkringskassans eslint shareable config",
  "repository": {
    "type": "git",
    "url": "https://github.com/Forsakringskassan/eslint-config.git"
  },
  "license": "MIT",
  "author": "FK IT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "true",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "npm run eslint && npm run prettier:check"
  },
  "prettier": "@forsakringskassan/prettier-config",
  "release": {
    "extends": "@forsakringskassan/semantic-release-monorepo-config"
  },
  "jest": {
    "preset": "@forsakringskassan/jest-config",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "example.spec.ts"
    ]
  },
  "devDependencies": {
    "@forsakringskassan/jest-config": "29.3.2",
    "@forsakringskassan/prettier-config": "1.3.11",
    "@types/jest": "29.5.12",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "lerna": "6.6.2"
  },
  "renovate": {
    "extends": [
      "local>npm-packages/renovate-config-fk:lib"
    ],
    "packageRules": [
      {
        "matchPackagePatterns": [
          "^@rushstack/eslint-patch$",
          "^@typescript-eslint/",
          "^@vue/",
          "^eslint$",
          "^eslint-"
        ],
        "matchDepTypes": [
          "dependencies"
        ],
        "rangeStrategy": "pin"
      }
    ]
  }
}
